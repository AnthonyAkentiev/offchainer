{
  "name": "offchainer",
  "version": "0.1.0",
  "description": "A middleware for trustless data exchange between blockchain and RDBMS.",
  "scripts": {
	"staging": "cd docker/environments/staging && docker-compose up -d && clear && docker-compose logs -f middleware",
	"run-staging": "node src/middleware/server/start.js",
	"development": "docker-compose -f docker/environments/development/docker-compose.yml up",
	"run-development": "nodemon src/middleware/server/start.js",
	"benchmarking": "mocha src/middleware/benchmarking/benchmarking.js --timeout 120000 --exit",
	"run-benchmarking": "mocha src/middleware/benchmarking/benchmarking.js --timeout 120000 --exit",
	"test": "node src/middleware/server/test/test-merkle-tree.js",
	"truffle": "cd src/blockchain && truffle compile --reset --compile-all"
  },
  "dependencies": {
	"express": "^4.16.2",
	"mocha": "^5.0.0",
	"pg": "^7.4.0",
	"sequelize": "^4.22.7",
	"supertest": "^3.0.0",
	"web3": "^0.19.0",
	"web3-utils": "^1.0.0-beta.26"
  }
}
